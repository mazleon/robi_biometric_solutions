# Face Verification API Configuration
# Production configuration for RTX 4090 with Hybrid Vector Store

# Application Settings
APP_NAME="Face Verification API"
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_GRPC_PORT=6334
QDRANT_COLLECTION=face_embeddings
QDRANT_TIMEOUT=30
QDRANT_RETRIES=3

# FAISS GPU Cache Configuration
FAISS_ENABLED=true
FAISS_INDEX_TYPE=IVF
FAISS_NLIST=4096
FAISS_NPROBE=64
FAISS_CACHE_SIZE=100000

# Face Processing Settings
MODEL_NAME=buffalo_l
SIMILARITY_THRESHOLD=0.45
MAX_FACES_PER_IMAGE=1
MAX_IMAGE_SIZE=1024
EMBEDDING_DIMENSION=512
COSINE_SIMILARITY_THRESHOLD=0.65

# GPU Optimization (RTX 4090 Optimized)
USE_GPU=true
GPU_DEVICE_ID=0
CTX_ID=0
GPU_MEMORY_FRACTION=0.95
AGGRESSIVE_OPTIMIZATIONS=true

# File Upload Limits
MAX_FILE_SIZE=5242880

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
STRUCTURED_LOGGING=true

# Performance Settings (RTX 4090 Optimized)
MAX_WORKERS=8
REQUEST_TIMEOUT=15
BATCH_SIZE=16
ENABLE_CACHING=true
CACHE_SIZE=1000

# Connection Settings
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=5

# Security Settings
API_KEY=
